<%include partials/header%>
	<section class="container-fluid bg-white">
		<div class="row justify-content-center align-items-center min-vh-88">
			<div class="col-md-4">
				<form action="/register" method="post" class="bg-light border shadow text-dark">
					<div class="text-center p-2">
						<img src="/imgs/logo.png" class="img-fluid" alt="YelpCamp logo">
						<h1>Create account</h1>
					</div>
					<div class="form-group px-4 pb-2 m-0">
						<label for="login-username">Username</label>
						<input type="text" name="username" placeholder="Username" id="login-username" class="form-control rounded-0 p-4 border-success font-weight-lighter">
					</div>
					<div class="form-group px-4 py-2 m-0">
						<label for="login-password">Password</label>
						<input type="password" name="password" placeholder="Password" id="login-password" class="form-control rounded-0 p-4 border-success font-weight-lighter">
					</div>
					<div class="p-4">
						<button type="submit" class="btn btn-success w-100 p-0 p-4 rounded-0">Sign up</button>
					</div>
				</form>
			</div>
		</div>
	</section>
<%include partials/footer%>